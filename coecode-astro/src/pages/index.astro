---
import MainLayout from '../layouts/MainLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
---

<MainLayout title="Coe Code - Application Studio">
  <!-- Hero Section -->
  <section class="max-w-6xl mx-auto px-6 pt-12 pb-16">
    <div class="max-w-4xl">
      <!-- Status Indicator -->
      <div class="flex items-center gap-3 mb-8" x-data="{ pulse: true }">
        <div 
          class="w-3 h-3 bg-green-400 rounded-full"
          :class="pulse ? 'animate-pulse' : ''"
        ></div>
        <span class="text-white/80">Available for new work</span>
      </div>
      
      <!-- Main Title -->
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
        Coe Code
        <span class="block text-yellow-400">Application Studio</span>
      </h1>
      
      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-white/70 mb-12 leading-relaxed max-w-3xl">
        Building beautiful mobile experiences that connect people and solve real problems. 
        Specializing in iOS development with a focus on user-centered design.
      </p>
    </div>
  </section>

  <!-- Featured Work -->
  <section class="max-w-6xl mx-auto px-6 pb-16">
    <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">Featured Work</h2>
    
    <ProjectCard
      title="Linc - Friendship Tracker"
      description="A beautiful iOS app that helps you maintain meaningful connections with the people who matter most. Track interactions, set reminders, and never lose touch again."
      image="/images/linc-thumbnail.png"
      href="/linc"
      featured={true}
    />
  </section>

  <!-- Background Elements -->
  <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 -left-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 -right-1/4 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
  </div>
</MainLayout> 